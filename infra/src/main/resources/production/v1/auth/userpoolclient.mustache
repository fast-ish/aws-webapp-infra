name: {{deployment:id}}-webapp-userpoolclient
idTokenValidity: PT1H
accessTokenValidity: PT1H
authSessionValidity: PT5M
refreshTokenValidity: PT2H
enableTokenRevocation: true
generateSecret: false
disableOAuth: false
preventUserExistenceErrors: true
enablePropagateAdditionalUserContextData: true
oauth:
  implicitCodeGrant: false
  clientCredentials: false
  authorizationCodeGrant: true
  scopes:
    - email
    - profile
    - openid
  callbackUrls:
    - https://{{deployment:domain}}/identified
  logoutUrls:
    - https://{{deployment:domain}}/logout
readAttributes:
  email: true
  email_verified: true
  phone_number: true
  phone_number_verified: true
  preferred_username: true
  name: true
  address: true
  website: true
  timezone: true
  locale: true
  updated_at: true
writeAttributes:
  email: true
  phone_number: true
  preferred_username: true
  name: true
  address: true
  website: true
  timezone: true
  locale: true
  updated_at: true
customAttributes:
  - mfa
  - terms
  - subscription
authFlow:
  adminUserPassword: true
  userPassword: true
  userSrp: true
  custom: false
tags:
  "{{deployment:domain}}:resource-type": userpoolclient
  "{{deployment:domain}}:category": identity
  "{{deployment:domain}}:type": external
  "{{deployment:domain}}:component": "{{deployment:id}}-userpoolclient"
  "{{deployment:domain}}:part-of": "{{synthesizer:name}}:{{deployment:organization}}:{{deployment:name}}:{{deployment:alias}}:webapp"
